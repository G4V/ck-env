governer=powersave
if [ "$CK_GPU_FREQ_GOVERNER" != "" ]; then
 governer=$CK_GPU_FREQ_GOVERNER
fi

stop mpdecision

echo $governor > /sys/class/kgsl/kgsl-3d0/devfreq/governor

if [ "$1" != "" ]; then
   frequency=$1
fi
if [ "$CK_GPU_FREQ" != "" ]; then
   frequency=$CK_GPU_FREQ
fi

echo "    Setting min/max frequency=$frequency ..."

